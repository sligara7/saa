{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Index Schema",
  "description": "JSON Schema for validating index.json files",
  "type": "object",
  "required": ["system_name", "description", "last_updated", "components"],
  "properties": {
    "system_name": {
      "type": "string",
      "minLength": 3,
      "description": "Name of the system-of-systems"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "description": "Description of the system"
    },
    "last_updated": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "description": "Date in YYYY-MM-DD format"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "framework": {
          "type": "string"
        },
        "process_version": {
          "type": "string"
        },
        "generated_by": {
          "type": "string"
        },
        "total_components": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "components": {
      "type": "object",
      "patternProperties": {
        "^[a-z][a-z0-9_-]*$": {
          "type": "string",
          "pattern": "^systems/[^/]+/[^/]+/service_architecture\\.json$"
        }
      },
      "additionalProperties": false,
      "description": "Mapping of component_id to relative file path"
    }
  }
}